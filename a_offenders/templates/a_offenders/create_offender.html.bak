{% extends 'a_incidents/base.html' %}

{% block content %}
<section class="bg-white dark:bg-gray-900">
  <div class="max-w-4xl px-4 py-8 mx-auto lg:py-16">
    <h2 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">Create Offender Record</h2>

    <!-- IMPORTANT: post to the named URL that exists in urls.py -->
    <form method="post" enctype="multipart/form-data">
      {% csrf_token %}
      <div class="grid gap-4 mb-4 sm:grid-cols-2 sm:gap-6 sm:mb-5">
        {{ form.as_p }}
      </div>

        <!-- Full Name (required) -->
        <div class="sm:col-span-2">
          <label for="{{ form.name.id_for_label }}" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
            Full Name <span class="text-red-500">*</span>
          </label>
          {{ form.name }}
          {% if form.name.errors %}<p class="text-red-600 text-sm mt-1">{{ form.name.errors }}</p>{% endif %}
        </div>

        <!-- Contact Information -->
        <div class="sm:col-span-2">
          <label for="{{ form.contact_info.id_for_label }}" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Contact Information</label>
          {{ form.contact_info }}
          {% if form.contact_info.errors %}<p class="text-red-600 text-sm mt-1">{{ form.contact_info.errors }}</p>{% endif %}
          <p class="text-gray-500 text-xs mt-1">Phone, email, or other contact details.</p>
        </div>

        <!-- Photo -->
        <div class="sm:col-span-2">
          <label for="{{ form.photo.id_for_label }}" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Photo</label>
          {{ form.photo }}
          {% if form.photo.errors %}<p class="text-red-600 text-sm mt-1">{{ form.photo.errors }}</p>{% endif %}
          <div class="mt-3">
            <img id="photo-preview" class="hidden w-32 h-32 rounded object-cover border" alt="Preview">
          </div>
        </div>

        <!-- Optional basics -->
        <div>
          <label for="{{ form.age.id_for_label }}" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Age</label>
          {{ form.age }}
        </div>
        <div>
          <label for="{{ form.date_of_birth.id_for_label }}" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Date of Birth</label>
          {{ form.date_of_birth }}
        </div>
        <div>
          <label for="{{ form.sex.id_for_label }}" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Sex</label>
          {{ form.sex }}
        </div>
        <div>
          <label for="{{ form.height.id_for_label }}" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Height</label>
          {{ form.height }}
        </div>
        <div>
          <label for="{{ form.weight.id_for_label }}" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Weight</label>
          {{ form.weight }}
        </div>
        <div>
          <label for="{{ form.hair_color.id_for_label }}" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Hair Color</label>
          {{ form.hair_color }}
        </div>
        <div>
          <label for="{{ form.eye_color.id_for_label }}" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Eye Color</label>
          {{ form.eye_color }}
        </div>
        <div class="sm:col-span-2">
          <label for="{{ form.occupation.id_for_label }}" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Occupation</label>
          {{ form.occupation }}
        </div>
        <div class="sm:col-span-2">
          <label for="{{ form.address.id_for_label }}" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Address</label>
          {{ form.address }}
        </div>
        <div class="sm:col-span-2">
          <label for="{{ form.notes.id_for_label }}" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Notes</label>
          {{ form.notes }}
        </div>

        <!-- Immediate Actions (Warning / Ban + Venue Email) -->
        <div class="sm:col-span-2 mt-4 p-4 rounded-lg border">
          <h3 class="font-semibold mb-3">Immediate Actions</h3>

          <!-- Quick Warning -->
          <div class="mb-3">
            <label class="inline-flex items-center gap-2">
              {{ form.warning_now }} <span>Create a Warning now?</span>
            </label>
          </div>
          <div class="mb-4">
            <label for="{{ form.warning_severity.id_for_label }}" class="block mb-1 text-sm font-medium">Warning Severity</label>
            {{ form.warning_severity }}
            <p class="text-xs text-gray-500 mt-1">Only used if “Create a Warning now?” is ticked.</p>
          </div>

          <!-- Quick Ban -->
          <div class="mb-3">
            <label class="inline-flex items-center gap-2">
              {{ form.ban_now }} <span>Create a Ban now?</span>
            </label>
          </div>
          <div class="grid sm:grid-cols-2 gap-4">
            <div>
              <label for="{{ form.ban_duration.id_for_label }}" class="block mb-1 text-sm font-medium">Ban Duration</label>
              {{ form.ban_duration }}
            </div>
            <div>
              <label for="{{ form.ban_reason.id_for_label }}" class="block mb-1 text-sm font-medium">Ban Reason</label>
              {{ form.ban_reason }}
            </div>
          </div>

          <!-- Notify venue on ban (uses venue picker) -->
          <div class="mt-4 grid sm:grid-cols-2 gap-4">
            <label class="inline-flex items-center gap-2 sm:col-span-2">
              {{ form.notify_venue }} <span>Email the venue about this ban?</span>
            </label>

            <div id="venue-select-wrap" class="sm:col-span-2">
              <label for="{{ form.venue_to_notify.id_for_label }}" class="block mb-1 text-sm font-medium">
                Venue to notify
              </label>
              {{ form.venue_to_notify }}
              {% if form.venue_to_notify.errors %}<p class="text-red-600 text-sm mt-1">{{ form.venue_to_notify.errors }}</p>{% endif %}
              <p class="text-xs text-gray-500 mt-1">We’ll use the email saved on the venue.</p>
            </div>
          </div>
        </div>

        <!-- Help box -->
        <div class="sm:col-span-2 mt-2 p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg">
          <h4 class="text-sm font-medium text-blue-900 dark:text-blue-200 mb-2">Release 1 - Basic Information</h4>
          <ul class="text-xs text-blue-800 dark:text-blue-300 space-y-1">
            <li>• Only the name field is required — contact information is optional.</li>
            <li>• Photo and extra fields are optional.</li>
            <li>• You can update the record later.</li>
          </ul>
        </div>
      </div>

      <!-- Actions -->
      <button type="submit"
        class="text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:ring-blue-300
               font-medium rounded-lg text-sm px-5 py-2.5 text-center">
        Create Offender
      </button>
      <a href="{% url 'offender-home' %}"
        class="ml-2 inline-block text-sm text-gray-500 hover:underline dark:text-gray-400">
        Cancel
        </a>
      </div>
    </form>
  </div>
</section>

<!-- Preview uploaded photo -->
<script>
(function () {
  const input = document.getElementById("{{ form.photo.id_for_label }}");
  const img = document.getElementById("photo-preview");
  if (!input) return;
  input.addEventListener("change", () => {
    const file = input.files && input.files[0];
    if (file) {
      img.src = URL.createObjectURL(file);
      img.classList.remove("hidden");
    } else {
      img.src = "";
      img.classList.add("hidden");
    }
  });
})();
</script>

<!-- Toggle venue picker when "notify venue" is checked -->
<script>
(function () {
  const cb = document.getElementById("{{ form.notify_venue.id_for_label }}");
  const wrap = document.getElementById("venue-select-wrap");
  const selectEl = document.getElementById("{{ form.venue_to_notify.id_for_label }}");
  function sync() {
    const on = cb && cb.checked;
    if (wrap) wrap.style.display = on ? "" : "none";
    if (selectEl) selectEl.disabled = !on;
  }
  if (cb) { cb.addEventListener("change", sync); sync(); }
})();
</script>
{% endblock content %}
